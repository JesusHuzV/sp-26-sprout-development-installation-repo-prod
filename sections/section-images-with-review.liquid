<div class='twcss-py-14 color-{{ section.settings.color_scheme }}'>
  {% case section.settings.layout_type %}
    {% when 'primary' %}
      <section
        class='twcss-grid-system twcss-mt-4 twcss-gap-5 '
      >
        <div class='twcss-col-span-full md:twcss-col-span-4 lg:twcss-col-span-6'>
          <div class='twcss-w-full twcss-h-full twcss-flex twcss-flex-col'>
            {% if section.settings.main_image %}
              <img
                src='{{ section.settings.main_image | image_url }}'
                class='twcss-w-full twcss-object-cover twcss-flex-1'
                alt='product-image'
                loading='lazy'
                width='auto'
                height='auto'
              >
            {% else %}
              {{ 'hero-apparel-1' | placeholder_svg_tag: 'twcss-w-full twcss-h-full' }}
            {% endif %}
            <div class='twcss-mt-[10px] twcss-flex twcss-items-center twcss-gap-2 [&>.icon-caret]:twcss-w-3 [&>.icon-caret]:-twcss-rotate-90'>
              <h4 class='{{ section.settings.first_title_size }} twcss-text-primary '>
                {{ section.settings.first_title | link_to: section.settings.first_link }}
              </h4>
              {% render 'icon-caret' %}
            </div>
          </div>
        </div>

        <div class='twcss-col-span-full md:twcss-col-span-4 lg:twcss-col-span-6'>
          <div class='twcss-flex twcss-flex-col twcss-gap-5'>
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'comment' %}
                  <div
                    class='twcss-h-1/2 twcss-min-h-[400px] twcss-flex twcss-items-center twcss-justify-center'
                    style='background: {{ block.settings.background_color }}'
                  >
                    {% render 'snippet-comment',
                      comment: block.settings.comment,
                      author: block.settings.author,
                      charge: block.settings.charge,
                      color: block.settings.text_color
                    %}
                  </div>
                {% when 'center-comment' %}
                  <div
                    class='twcss-h-1/2 twcss-min-h-[400px] twcss-flex twcss-items-center twcss-justify-center'
                    style='background: {{ block.settings.background_color }}'
                  >
                    {% render 'snippet-center-comment',
                      eyebrow: block.settings.eyebrow,
                      title: block.settings.title,
                      comment: block.settings.comment,
                      color: block.settings.text_color
                    %}
                  </div>
              {% endcase %}
            {% endfor %}
            <div
              class='twcss-h-1/2 twcss-min-h-[400px] twcss-flex twcss-flex-col'
            >
              {% if section.settings.second_image %}
                <img
                  src='{{ section.settings.second_image | image_url }}'
                  class='twcss-h-full twcss-w-full twcss-object-cover twcss-flex-1'
                  alt='product-image'
                  loading='lazy'
                  width='auto'
                  height='auto'
                >
              {% else %}
                {{ 'hero-apparel-1' | placeholder_svg_tag: 'twcss-w-full twcss-h-full twcss-flex-1' }}
              {% endif %}

              <div class='twcss-mt-[10px] twcss-flex twcss-items-center twcss-gap-2 [&>.icon-caret]:twcss-w-3 [&>.icon-caret]:-twcss-rotate-90'>
                <h4 class='{{ section.settings.second_title_size }} twcss-text-primary'>
                  {{ section.settings.second_title | link_to: section.settings.second_link }}
                </h4>
                {% render 'icon-caret' %}
              </div>
            </div>
          </div>
        </div>
      </section>
    {% when 'secondary' %}
      <section
        class='twcss-grid-system twcss-mt-4 twcss-gap-5 twcss-pb-[58px] lg:twcss-mt-[50px]'
      >
        <div class='twcss-col-span-full'>
          {% if section.settings.main_image %}
            <div class='twcss-hidden lg:twcss-block'>
              {% if section.settings.first_link %}
                <a href='{{ section.settings.first_link }}'>
                  <img
                    src='{{ section.settings.main_image | image_url }}'
                    class='twcss-w-full twcss-h-full twcss-object-cover twcss-max-h-[400px]'
                    alt='product-image'
                    loading='lazy'
                    width='auto'
                    height='auto'
                  >
                </a>
              {% else %}
                <img
                  src='{{ section.settings.main_image | image_url }}'
                  class='twcss-w-full twcss-h-full twcss-object-cover twcss-max-h-[400px]'
                  alt='product-image'
                  loading='lazy'
                  width='auto'
                  height='auto'
                >
              {% endif %}
            </div>
          {% else %}
            {{ 'hero-apparel-1' | placeholder_svg_tag: 'twcss-w-full twcss-h-full twcss-flex-1' }}
          {% endif %}
        </div>
        <div class='twcss-col-span-full'>
          <div class='twcss-gap-5 twcss-grid-system !twcss-m-0'>
            {% if section.settings.second_image %}
              <div class='twcss-col-span-full lg:twcss-col-span-6'>
                {% if section.settings.second_link %}
                  <a href='{{ section.settings.second_link }}'>
                    <img
                      src='{{ section.settings.second_image | image_url }}'
                      class='twcss-h-full twcss-w-full twcss-object-cover twcss-flex-1'
                      alt='product-image'
                      loading='lazy'
                      width='auto'
                      height='auto'
                    >
                  </a>
                {% else %}
                  <img
                    src='{{ section.settings.second_image | image_url }}'
                    class='twcss-h-full twcss-w-full twcss-object-cover twcss-flex-1'
                    alt='product-image'
                    loading='lazy'
                    width='auto'
                    height='auto'
                  >
                {% endif %}
              </div>
            {% else %}
              <div class='twcss-col-span-full lg:twcss-col-span-6'>
                {{ 'hero-apparel-1' | placeholder_svg_tag: 'twcss-w-full twcss-h-full twcss-flex-1' }}
              </div>
            {% endif %}
            <div class='twcss-col-span-full lg:twcss-col-span-6 twcss-relative'>
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'comment' %}
                    <div
                      class='twcss-h-full twcss-flex twcss-justify-center twcss-items-center'
                      style='background: {{ block.settings.background_color }}'
                    >
                      <div>
                        {% render 'snippet-comment',
                          comment: block.settings.comment,
                          author: block.settings.author,
                          charge: block.settings.charge,
                          color: block.settings.text_color
                        %}
                      </div>
                    </div>
                  {% when 'center-comment' %}
                    <div
                      class='twcss-h-full twcss-flex twcss-justify-center twcss-items-center'
                      style='background: {{ block.settings.background_color }}'
                    >
                      <div>
                        {% render 'snippet-center-comment',
                          eyebrow: block.settings.eyebrow,
                          title: block.settings.title,
                          comment: block.settings.comment,
                          color: block.settings.text_color
                        %}
                      </div>
                    </div>
                {% endcase %}
              {% endfor %}
            </div>
          </div>
        </div>
      </section>
  {% endcase %}
</div>

{% schema %}
{
  "name": "Images with review",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "select",
      "id": "layout_type",
      "options": [
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        }
      ],
      "default": "primary",
      "label": "Layout"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "text",
      "id": "first_title",
      "label": "Title"
    },
    {
      "type": "select",
      "id": "first_title_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        }
      ],
      "default": "h2",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "url",
      "id": "first_link",
      "label": "Link",
      "info": "Attached to title when primary layout or to main banner when secondary layout."
    },
    {
      "type": "image_picker",
      "id": "second_image",
      "label": "Second Image"
    },
    {
      "type": "text",
      "id": "second_title",
      "label": "Title"
    },
    {
      "type": "select",
      "id": "second_title_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        }
      ],
      "default": "h2",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "url",
      "id": "second_link",
      "label": "Link",
      "info": "Attached to title when primary layout or to small banner when secondary layout."
    }
  ],
  "max_blocks": 1,
  "blocks": [
    {
      "type": "comment",
      "name": "Comment",
      "settings": [
        {
          "type": "color",
          "id": "background_color",
          "label": "Background",
          "default": "#000"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text",
          "default": "#fff"
        },
        {
          "type": "richtext",
          "id": "comment",
          "label": "Comment",
          "default": "<p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Enim corrupti amet molestias maiores sed, esse dolores exercitationem architecto sequi assumenda.</p>"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "Lorem ipsum dolor sit amet."
        },
        {
          "type": "text",
          "id": "charge",
          "label": "Charge",
          "default": "Lorem ipsum dolor sit amet consectetur."
        }
      ]
    },
    {
      "type": "center-comment",
      "name": "Center comment",
      "settings": [
        {
          "type": "color",
          "id": "background_color",
          "label": "Background",
          "default": "#000"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text",
          "default": "#fff"
        },
        {
          "type": "text",
          "id": "eyebrow",
          "label": "Eyebrow",
          "default": "Lorem ipsum dolor sit amet."
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Lorem ipsum dolor sit amet."
        },
        {
          "type": "richtext",
          "id": "comment",
          "label": "comment",
          "default": "<p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Enim corrupti amet molestias maiores sed, esse dolores exercitationem architecto sequi assumenda.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Images with review",
      "blocks": [
        {
          "type": "comment"
        }
      ]
    }
  ]
}
{% endschema %}
