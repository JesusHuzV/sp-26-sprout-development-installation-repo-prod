<div class='{{ section.settings.container_size }} twcss-flex twcss-bg-background color-{{ section.settings.color_scheme }}'>
  <div
    class='twcss-mx-auto twcss-flex twcss-max-w-[1920px] twcss-flex-wrap-reverse twcss-justify-center {% if section.settings.reverse_content == true %} md:twcss-flex-row-reverse {% endif %}'
    style='margin-bottom: {{ section.settings.margin_bottom }}px; margin-top: {{ section.settings.margin_top }}px;'
  >
    <div class='twcss-flex twcss-w-full twcss-flex-col twcss-justify-center twcss-py-[60px] twcss-px-4 md:twcss-w-1/2 md:twcss-pl-8 md:twcss-pr-4 lg:twcss-py-[130px] lg:twcss-px-[100px]'>
      {% if section.settings.small_image %}
        <img
          src='{{ section.settings.small_image | image_url }}'
          class='twcss-mb-3 twcss-w-8 twcss-h-8 twcss-rounded-full lg:twcss-hidden twcss-object-cover twcss-min-h-[500px]'
          alt='logo'
          loading='lazy'
          width='auto'
          height='auto'
        >
      {% else %}
        {{
          'detailed-apparel-1'
          | placeholder_svg_tag: 'twcss-mb-3 twcss-w-8 twcss-h-8 twcss-rounded-full lg:twcss-hidden'
        }}
      {% endif %}
      <h2 class='twcss-mb-3 lg:twcss-mb-5 rich-text__heading rte inline-richtext {{ section.settings.heading_size }}'>
        {{ section.settings.title }}
      </h2>
      <div class='twcss-mb-7 lg:twcss-mb-5 rich-text__text rte'>
        {{ section.settings.descripcion }}
      </div>
      <div class='twcss-flex twcss-w-full twcss-flex-col twcss-gap-4 md:twcss-flex-row twcss-flex-wrap'>
        {%- if section.settings.show_button_1 == true -%}
          <a
            href='{{ section.settings.link_button_1 }}'
            class='button twcss-block twcss-w-full {% if section.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}'
          >
            {{ section.settings.text_button_1 }}
          </a>
        {%- endif -%}

        {%- if section.settings.show_button_2 == true -%}
          <a
            href='{{ section.settings.link_button_2 }}'
            class='button twcss-block twcss-w-full {% if section.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}'
          >
            {{ section.settings.text_button_2 }}
          </a>
        {%- endif -%}
      </div>
    </div>

    <div class='twcss-w-full md:twcss-w-1/2'>
      {% if section.settings.big_image %}
        <img
          src='{{ section.settings.big_image | image_url }}'
          class='twcss-h-full twcss-w-full twcss-object-cover'
          alt='product-image'
          loading='lazy'
          width='auto'
          height='auto'
        >
      {% else %}
        {{ 'detailed-apparel-1' | placeholder_svg_tag: 'twcss-h-full twcss-w-full twcss-object-cover' }}
      {% endif %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Texts and image",
  "tag": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin top",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin bottom",
      "default": 36
    },
    {
      "type": "select",
      "id": "container_size",
      "options": [
        {
          "value": "twcss-w-full",
          "label": "Full width"
        },
        {
          "value": "twcss-grid-system",
          "label": "Container"
        }
      ],
      "default": "twcss-grid-system",
      "label": "Container size"
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "title",
      "default": "Title text"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "richtext",
      "id": "descripcion",
      "label": "descripcion",
      "default": "<p>Share information about your brand with your customers. Describe a product, make announcements, or welcome customers to your store.</p>"
    },
    {
      "type": "checkbox",
      "id": "reverse_content",
      "default": false,
      "label": "Reverse content"
    },
    {
      "type": "image_picker",
      "id": "big_image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "small_image",
      "label": "Small image"
    },
    {
      "type": "header",
      "content": "Button 1"
    },
    {
      "type": "checkbox",
      "id": "show_button_1",
      "default": true,
      "label": "Show button"
    },
    {
      "type": "text",
      "id": "text_button_1",
      "label": "Content button",
      "default": "lorem"
    },
    {
      "type": "url",
      "id": "link_button_1",
      "label": "Link",
      "default": "/"
    },
    {
      "type": "checkbox",
      "id": "button_style_secondary_1",
      "default": false,
      "label": "t:sections.image-banner.blocks.buttons.settings.button_style_secondary_1.label"
    },
    {
      "type": "header",
      "content": "Button 2"
    },
    {
      "type": "checkbox",
      "id": "show_button_2",
      "default": true,
      "label": "Show button"
    },
    {
      "type": "text",
      "id": "text_button_2",
      "label": "Content button",
      "default": "lorem"
    },
    {
      "type": "url",
      "id": "link_button_2",
      "label": "Link",
      "default": "/"
    },
    {
      "type": "checkbox",
      "id": "button_style_secondary_2",
      "default": false,
      "label": "t:sections.image-banner.blocks.buttons.settings.button_style_secondary_1.label"
    }
  ],
  "presets": [
    {
      "name": "Texts and image"
    }
  ]
}
{% endschema %}
