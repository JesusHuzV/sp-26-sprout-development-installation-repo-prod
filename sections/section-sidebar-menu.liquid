<section
  style='padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;'
  class='color-{{ section.settings.color_scheme }}'
>
  <div
    class='twcss-grid-system'
  >
    <h1
      class='twcss-col-span-4 sm:twcss-col-span-8 lg:twcss-col-span-12 {{ section.settings.title_size }} twcss-font-bold twcss-mb-[18px]'
    >
      {{ section.settings.title }}
    </h1>
    <div class='twcss-col-span-4 sm:twcss-col-span-8 lg:twcss-col-span-12 twcss-grid-system twcss-w-full twcss-mx-0'>
      <ul class='twcss-col-span-4 lg:twcss-col-span-6 [&>li:last-child]:twcss-border-b-0'>
        <li class='twcss-mb-[44px] {{ section.settings.service_subtitle_size }} lg:twcss-mb-[68px]'>
          {{ section.settings.service_subtitle }}
        </li>
        {% for block in section.blocks %}
          {% if block.type == 'Service' %}
            <li class='twcss-flex twcss-justify-between sm:twcss-w-10/12 twcss-border-b twcss-border-solid twcss-boder-border twcss-px-[22px] twcss-pb-6'>
              <div class='twcss-col-span-9 twcss-flex twcss-items-center twcss-gap-x-6'>
                {% if block.settings.icon != blank %}
                  <div>
                    <img src='{{ block.settings.icon | image_url }}' alt='icon' loading='lazy' width='32' height='32'>
                  </div>
                {% endif %}
                <div>
                  <p class='{{ block.settings.title_size }} twcss-font-bold'>{{ block.settings.title }}</p>
                  <p class='twcss-typ-body-1'>{{ block.settings.description }}</p>
                </div>
              </div>
              <div class='twcss-col-span-3 twcss-flex twcss-items-center'>
                <a href='{{ block.settings.link }}' class='[&>.icon]:twcss-w-2'>
                  {% render 'icon-chevron' %}
                </a>
              </div>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
      <ul class='twcss-col-span-4 lg:twcss-col-span-6'>
        <li class='twcss-mb-[44px] lg:twcss-mb-[68px] {{ section.settings.politics_subtitle_size }}'>
          {{ section.settings.politics_subtitle }}
        </li>
        {% for block in section.blocks %}
          {% if block.type == 'Politics' %}
            <li class='twcss-pb-6'>
              <div class='twcss-col-span-9'>
                <p class='{{ block.settings.title_size }} twcss-font-bold'>
                  {{ block.settings.title | link_to: block.settings.link }}
                </p>
              </div>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
</section>

