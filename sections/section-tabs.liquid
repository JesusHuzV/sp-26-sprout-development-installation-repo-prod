<section
  class='twcss-w-full twcss-bg-[#] twcss-py-10 color-{{ section.settings.color_scheme }}'
  style='margin-bottom: {{ section.settings.margin_bottom }}px; margin-top: {{ section.settings.margin_top }}px;'
>
  <div class='twcss-grid-system'>
    <div class='twcss-col-span-full twcss-flex twcss-flex-wrap twcss-items-center twcss-justify-center twcss-border-b twcss-border-border'>
      {% for link in section.settings.menu.links %}
        <a
          href='{{ link.url }}'
          class='twcss-border-b-[2px] {% if link.current %} twcss-border-primary  {% else %} twcss-border-transparent {% endif %} twcss-p-[19px] twcss-text-center'
        >
          <h5 class='rich-text__heading rte inline-richtext {{ section.settings.heading_size }}'>
            {{- link.title -}}
          </h5>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Tabs",
  "tag": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin top",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin bottom",
      "default": 36
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        }
      ],
      "default": "h0",
      "label": "t:sections.all.heading_size.label"
    }
  ],
  "presets": [
    {
      "name": "Tabs"
    }
  ]
}
{% endschema %}
